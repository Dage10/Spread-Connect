<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardBackgroundColor="@color/item_background"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/imgAvatarUser"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/avatar"
                    android:contentDescription="Avatar"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/tvUsuari"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Usuari"
                    android:textStyle="bold"
                    android:textColor="@color/text_on_item"/>

                <TextView
                    android:id="@+id/tvData"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2025-01-01"
                    android:textColor="@color/text_on_item"
                    android:textSize="12sp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tvTitol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Títol"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_on_item"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/tvDescripcio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descripció"
                android:textColor="@color/text_on_item"
                android:layout_marginTop="4dp"/>

            <ImageView
                android:id="@+id/imgPost"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="-8dp"
                android:layout_marginRight="-8dp"
                android:visibility="gone"
                android:background="@null"
                android:contentDescription="Imatge del post"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:layout_marginTop="8dp">

                <ImageButton
                    android:id="@+id/btnLike"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/like"
                    android:background="@android:color/transparent"
                    android:contentDescription="Like"
                    android:scaleType="fitCenter"/>

                <TextView
                    android:id="@+id/textLikeComptador"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/text_on_item"
                    android:layout_marginEnd="8dp"
                    android:textSize="12sp"/>

                <ImageButton
                    android:id="@+id/btnDislike"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/dislike"
                    android:background="@android:color/transparent"
                    android:contentDescription="Dislike"
                    android:scaleType="fitCenter"/>

                <TextView
                    android:id="@+id/tvDislikeComptador"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/text_on_item"
                    android:layout_marginEnd="8dp"
                    android:textSize="12sp"/>

                <ImageButton
                    android:id="@+id/btnEditar"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_edit"
                    android:background="@android:color/transparent"
                    app:tint="@color/text_on_item"
                    android:contentDescription="Editar"/>

                <ImageButton
                    android:id="@+id/btnEliminar"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_delete"
                    android:background="@android:color/transparent"
                    app:tint="@color/text_on_item"
                    android:layout_marginStart="8dp"
                    android:contentDescription="Eliminar"/>
            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>
