<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".OblidatContrasenyaFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_background">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/botoEnrere"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:clickable="true"
            android:focusable="true"
            app:cardBackgroundColor="@color/blue"
            app:cardCornerRadius="50dp"
            app:cardElevation="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeWidth="0dp">
            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:src="@drawable/flecha"
                app:tint="@android:color/white" />
        </com.google.android.material.card.MaterialCardView>

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintTop_toBottomOf="@id/botoEnrere"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="24dp">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/form_background"
                    app:cardCornerRadius="40dp"
                    app:cardElevation="6dp"
                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="32dp">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="@color/header_background"
                            app:cardCornerRadius="20dp"
                            app:strokeWidth="0dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="80dp"
                                android:gravity="center"
                                android:text="@string/oblidat_contrasenya"
                                android:textColor="@color/text_on_header"
                                android:textSize="32sp"
                                android:textStyle="bold"/>
                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/emailInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="32dp"
                            app:boxBackgroundColor="@color/input_background"
                            app:boxBackgroundMode="filled"
                            app:boxCornerRadiusTopStart="16dp"
                            app:boxCornerRadiusTopEnd="16dp"
                            app:boxCornerRadiusBottomStart="16dp"
                            app:boxCornerRadiusBottomEnd="16dp"
                            android:hint="@string/email"
                            android:textColorHint="@color/text_on_form"
                            app:hintTextColor="@color/text_on_form"
                            app:startIconDrawable="@android:drawable/ic_dialog_email"
                            app:startIconTint="@color/text_on_form"
                            app:boxStrokeWidth="0dp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etEmail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="16dp"
                                android:inputType="textEmailAddress"
                                android:textColor="@color/text_on_form"
                                android:textSize="18sp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/codiInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:visibility="gone"
                            app:boxBackgroundColor="@color/input_background"
                            app:boxBackgroundMode="filled"
                            app:boxCornerRadiusTopStart="16dp"
                            app:boxCornerRadiusTopEnd="16dp"
                            app:boxCornerRadiusBottomStart="16dp"
                            app:boxCornerRadiusBottomEnd="16dp"
                            android:hint="@string/otp_codigo"
                            android:textColorHint="@color/text_on_form"
                            app:hintTextColor="@color/text_on_form"
                            app:startIconDrawable="@android:drawable/ic_lock_lock"
                            app:startIconTint="@color/text_on_form"
                            app:boxStrokeWidth="0dp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etCodi"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="16dp"
                                android:inputType="number"
                                android:textColor="@color/text_on_form"
                                android:textSize="18sp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/novaContrasenyaInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:visibility="gone"
                            app:boxBackgroundColor="@color/input_background"
                            app:boxBackgroundMode="filled"
                            app:boxCornerRadiusTopStart="16dp"
                            app:boxCornerRadiusTopEnd="16dp"
                            app:boxCornerRadiusBottomStart="16dp"
                            app:boxCornerRadiusBottomEnd="16dp"
                            android:hint="@string/contrasenya_nova"
                            android:textColorHint="@color/text_on_form"
                            app:hintTextColor="@color/text_on_form"
                            app:startIconDrawable="@android:drawable/ic_lock_lock"
                            app:startIconTint="@color/text_on_form"
                            app:boxStrokeWidth="0dp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etNovaContrasenya"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="16dp"
                                android:inputType="textPassword"
                                android:textColor="@color/text_on_form"
                                android:textSize="18sp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <TextView
                            android:id="@+id/textError"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/holo_red_light"
                            android:textSize="14sp"
                            android:layout_marginTop="8dp"
                            android:layout_gravity="center"
                            android:text="" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnEnviar"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginTop="24dp"
                            android:text="@string/enviar_email"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:backgroundTint="@color/header_background"
                            android:textColor="@color/text_on_header"
                            app:cornerRadius="16dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnVerificar"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginTop="24dp"
                            android:visibility="gone"
                            android:text="@string/verify_code"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:backgroundTint="@color/header_background"
                            android:textColor="@color/text_on_header"
                            app:cornerRadius="16dp" />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>