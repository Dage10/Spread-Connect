<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardBackgroundColor="@color/item_background"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/tvUsuari"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Usuari"
                android:textStyle="bold"
                android:textColor="@color/text_on_item"/>

            <TextView
                android:id="@+id/tvTitol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Títol"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_on_item"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/tvDescripcio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descripció"
                android:textColor="@color/text_on_item"
                android:layout_marginTop="4dp"/>

            <ImageView
                android:id="@+id/imgPresentacio"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="-8dp"
                android:layout_marginRight="-8dp"
                android:visibility="gone"
                android:background="@null"
                android:contentDescription="Imatge de la presentació"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:layout_marginTop="8dp">

                <ImageButton
                    android:id="@+id/btnEditar"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_edit"
                    android:background="@android:color/transparent"
                    app:tint="@color/text_on_item"
                    android:contentDescription="Editar"/>

                <ImageButton
                    android:id="@+id/btnEliminar"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_delete"
                    android:background="@android:color/transparent"
                    app:tint="@color/text_on_item"
                    android:layout_marginStart="8dp"
                    android:contentDescription="Eliminar"/>
            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>
