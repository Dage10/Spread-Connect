<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/iniciFragment">

    <fragment
        android:id="@+id/iniciFragment"
        android:name="com.daviddam.clickconnect.IniciFragment"
        android:label="fragment_inici"
        tools:layout="@layout/fragment_inici" >
        <action
            android:id="@+id/action_iniciFragment_to_registreFragment"
            app:destination="@id/registreFragment" />
        <action
            android:id="@+id/action_iniciFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_iniciFragment_to_areesFragments"
            app:destination="@id/areesFragments" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.daviddam.clickconnect.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_areesFragments"
            app:destination="@id/areesFragments" />
    </fragment>
    <fragment
        android:id="@+id/registreFragment"
        android:name="com.daviddam.clickconnect.RegistreFragment"
        android:label="fragment_registre"
        tools:layout="@layout/fragment_registre" />
    <fragment
        android:id="@+id/areesFragments"
        android:name="com.daviddam.clickconnect.AreesFragments"
        android:label="AreesFragments" />
</navigation>
